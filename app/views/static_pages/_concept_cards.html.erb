<section class="pt-5 jumbotron">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-xl-8 col-lg-9">
      <h2 class="text-center mb-5"><%= t "concept_card_title" %></h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-3 concept-card">
        <div class="row align-items-center justify-content-center">
          <div class="number m-2">1</div>
          <i class="fas fa-balance-scale fa-3x ml-2 icon-small"></i>
        </div>
        <p class="text-center p-concept"><%= t "concept_card_phrase_1" %></p>
      </div>
      <div class="col-sm-12 col-md-3 concept-card">
        <div class="row align-items-center justify-content-center">
          <div class="number m-2">2</div>
          <i class="far fa-calendar-check fa-3x ml-2 icon-small"></i>
        </div>
        <p class="text-center p-concept"><%= t "concept_card_phrase_2" %></p>
      </div>
      <div class="col-sm-12 col-md-3 concept-card">
        <div class="row align-items-center justify-content-center">
          <div class="number m-2">3</div>
          <i class="far fa-calendar-alt fa-3x ml-2 icon-small"></i>
        </div>
        <p class="text-center p-concept"><%= t "concept_card_phrase_3" %></p>
      </div>
      <div class="col-sm-12 col-md-3 concept-card">
        <div class="row align-items-center justify-content-center">
          <div class="number m-2">4</div>
          <i class="fas fa-shopping-basket fa-3x ml-2 icon-small"></i>
        </div>
        <p class="text-center p-concept"><%= t "concept_card_phrase_4" %></p>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-primary mx-2 my-1" %>
    </div>
  </div>
</section>
