<div class="container">
    <div class="row mt-5">
        <div class="col-4">
            <div class="card mb-3">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="138">
                    <div class="mt-3">
                      <h4><%= @user.first_name %> <%= @user.last_name %></h4>
                      <%= link_to t("edit_profile"), edit_users_path, :class =>"btn btn-primary" %>
                      <%= link_to t("log_out"), destroy_user_session_path, method: :delete, :class =>"btn btn-outline-primary" %>
                    </div>
                  </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0"><%= t "name" %></h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= @user.first_name %>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0"><%= "last_name" %></h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= @user.last_name %>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= @user.email %>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Mobile</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= @user.phone_number %>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0"><%= t "address_delivery" %></h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= @user.adress %> <%= @user.address_sup %> <%= @user.door_code %> <%= @user.city %> <%= @user.zipcode %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"><%= t ("service_html") %></h6>
                    <div class="row">
                        <% @user.orders.reverse_each do |order| %>
                            <% if ((order.end_date.year * 12 + order.end_date.month) - (DateTime.now.year * 12 + DateTime.now.month)) >= 0 %>
                                <div class="col-4">
                                <% if order.end_pause && order.end_pause > DateTime.now%>
                                    <div class="card mb-3 bg-warning">
                                <% else %>
                                    <div class="card mb-3">
                                <% end %>
                                        <div class="card-body">
                                            <div class="d-flex flex-column align-items-center text-center">
                                            <% if order.item.avatar.attached? %>
                                                <%= image_tag order.item.avatar, alt: 'avatar', class: "card-img-top" %>
                                            <% else %>
                                                <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/Interior/img(10).jpg" alt="Sample">
                                            <% end %>
                                            <h5> <%= t "subs_of" %>Abonnements de <%= order.item.sub_category.duration%> <%= t "month" %> </h5>
                                            <p> <%= t "date_from" %> <%= order.start_date.strftime("%F") %> <%= t "date_to" %> <%= order.end_date.strftime("%F") %></p>
                                            <%= link_to t("cta_see_more"), order_path(order) , class:"btn btn-primary stretched-link" %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Past</i>orders</h6>
                    <div class="row">
                        <% @user.orders.reverse_each do |order| %>
                            <% if ((order.end_date.year * 12 + order.end_date.month) - (DateTime.now.year * 12 + DateTime.now.month)) < 0 %>
                                <div class="col-4">
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex flex-column align-items-center text-center">
                                            <% if order.item.avatar.attached? %>
                                                <%= image_tag order.item.avatar, alt: 'avatar', class: "card-img-top" %>
                                            <% else %>
                                                <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/Interior/img(10).jpg" alt="Sample">
                                            <% end %>
                                            <h5> <%= t "subs_of" %> <%= order.item.sub_category.duration%> <%= t "month" %> </h5>
                                            <p><%= t "date_from" %><%= order.start_date.strftime("%F") %> <%= t "date_to" %> <%= order.end_date.strftime("%F") %></p>
                                            <%= link_to t("cta_see_more"), order_path(order) , class:"btn btn-primary stretched-link" %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>