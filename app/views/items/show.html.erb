<div class="my-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Accueil", acceuil_path %>
      </li>
      <li class="breadcrumb-item"><%= link_to "Abonemments", abonemments_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Produit</li>
    </ol>
  </nav>
</div>
<div class="container">
  <div class="my-5">
    <div class="row">
      <div class="col-md-5 mb-4 mb-md-0">

        <div class="">
        <%if @item.avatar.attached?%>
          <%= image_tag @item.avatar, alt: 'avatar', class: "img-fluid w-100" %>
        <%else%>
          <img class="img-fluid w-100" src="https://mdbootstrap.com/img/Photos/Horizontal/Interior/img(10).jpg" alt="Sample">
        <%end%>
          <a href="#!">
            <div class="mask waves-effect waves-light"></div>
          </a>
        </div>

      </div>
      <div class="col-md-7">

        <h5>Abonnement <%= @item.sub_category.duration %> mois</h5>
        <hr class="hr-product my-4">
        <p class="mb-2 text-muted text-uppercase small"><%= @item.title %></p>
        <ul class="rating">
          <li class="pr-1">
            <i class="fas fa-star fa-sm text-primary"></i>
          </li>
          <li class="pr-1">
            <i class="fas fa-star fa-sm text-primary"></i>
          </li>
          <li class="pr-1">
            <i class="fas fa-star fa-sm text-primary"></i>
          </li>
          <li class="pr-1">
            <i class="fas fa-star fa-sm text-primary"></i>
          </li>
          <li class="pr-1">
            <i class="far fa-star fa-sm text-primary"></i>
          </li>
        </ul>
        <p><span class="mr-1"><strong><%= @item.price %>€</strong></span></p>
        <p class="pt-1"><%= @item.description %></p>
        <div class="table-responsive">
          <table class="table table-sm table-borderless mb-0">
            <tbody>
              <tr>
                <th class="pl-0 w-25" scope="row"><strong>Taille</strong></th>
                <td>Different sizes</td>
              </tr>
              <tr>
                <th class="pl-0 w-25" scope="row"><strong>Types</strong></th>
                <td><%= @item.sub_type.specification %></td>
              </tr>
              <tr>
                <th class="pl-0 w-25" scope="row"><strong>Couleurs</strong></th>
                <td>Sand</td>
              </tr>
            </tbody>
          </table>
        </div>
        <hr>
        <button type="button" class="btn btn-primary btn-md mr-1 mb-2 waves-effect waves-light">Buy now</button>
        <button type="button" class="btn btn-light btn-md mr-1 mb-2 waves-effect waves-light"><i class="fas fa-shopping-cart ml-2 mr-2"></i>Add to cart</button>
      </div>
    </div>

    <section class="mt-4">

        <h3 class="text-center pt-5 mb-0">Ces produits peuvent aussi vous intéresser</h3>

        <!-- Grid row -->
        <div class="row mt-5 mb-4">

          <!-- Grid column -->
          <% 4.times do %>
            <% item = Item.all.sample%>
            <div class="col-md-6 col-lg-3 mb-4">
              <div class="">
                <div class="">
                  <%if item.avatar.attached?%>
                    <%= image_tag item.avatar, alt: 'avatar', class: "img-fluid w-100" %>
                  <%else%>
                    <img class="img-fluid w-100" src="https://mdbootstrap.com/img/Photos/Horizontal/Interior/img(10).jpg" alt="Sample">
                  <%end%>
                  <a href="#!">
                    <div class="mask waves-effect waves-light"></div>
                  </a>
                </div>
                <div class="text-center pt-4">
                  <h5><%= item.title %></h5>
                  <h6 class="mb-3"><%= item.price %>€</h6>
                  <%= link_to "Voir plus", item_path(item) , class:"btn btn-info btn-sm px-3 stretched-link" %>
                </div>
              </div>
            </div>

          <% end %>
        </div>

      </section>
  </div>
</div>
