<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 p-5">
            <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-all-list" data-toggle="list" href="#list-all" role="tab" aria-controls="all"><%= t "index_items_all" %></a>
            <a class="list-group-item list-group-item-action" id="list-hebdo-list" data-toggle="list" href="#list-hebdo" role="tab" aria-controls="hebdo"><%= t "weekly" %></a>
            <a class="list-group-item list-group-item-action" id="list-mensu-list" data-toggle="list" href="#list-mensu" role="tab" aria-controls="mensu"><%= t "monthly" %></a>
            </div>
        </div>
        <div class="col-md-9 p-5">
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="list-all" role="tabpanel" aria-labelledby="list-all-list">
                    <% SubCategory.all.each do |category| %>
                        <div class="card text-center mb-5">
                            <div class="card-body">
                                <h5 class="card-title"><%= t "our_subscriptions" %> <%= category.duration %> <%= t "month" %></h5>
                                <% category.items.each_slice(3) do |items| %>
                                    <div class="card-deck mb-5">
                                        <% items.each do |item| %>
                                            <div class="card">
                                                <%if item.avatar.attached?%>
                                                    <%= image_tag item.avatar, alt: 'avatar', class: "card-img-top" %>
                                                <%else%>
                                                    <%= image_tag("default.jpg", class:"card-img-top") %>
                                                <%end%>
                                                <div class="card-body">
                                                    <h5 class="card-title"><%= item.title %></h5>
                                                    <p class="card-text"><%= item.price %> €</p>
                                                    <p class="card-text"><%= t "receive" %> <%= item.sub_category.duration %> <%= t "month_in" %> <%= item.sub_type.specification %> <%= t "basket" %> <%= item.size %></p>
                                                    <%= link_to t("cta_see_more"), item_path(item) , class:"btn btn-primary stretched-link" %>
                                                </div>
                                            </div>
                                        <% end %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="tab-pane fade" id="list-hebdo" role="tabpanel" aria-labelledby="list-hebdo-list">
                    <% SubCategory.all.each do |category| %>
                        <div class="card text-center mb-5">
                            <div class="card-body">
                                <h5 class="card-title"><%= t "our_subscriptions" %> <%= category.duration %> <%= t "month" %></h5>
                                <div class="card-deck">
                                <% category.items.each do |item| %>
                                    <% if item.sub_type.specification == "Weekly" %>
                                        <div class="card">
                                            <%if item.avatar.attached?%>
                                                <%= image_tag item.avatar, alt: 'avatar', class: "card-img-top" %>
                                            <%else%>
                                                <%= image_tag("default.jpg", class:"card-img-top") %>
                                            <%end%>
                                            <div class="card-body">
                                                <h5 class="card-title"><%= item.title %></h5>
                                                <p class="card-text"><%= item.price %> €</p>
                                                <p class="card-text"><%= t "receive" %> <%= item.sub_category.duration %> <%= t "month_in" %> <%= item.sub_type.specification %> <%= t "basket" %> <%= item.size %></p>
                                                <%= link_to t("cta_see_more"), item_path(item) , class:"btn btn-primary stretched-link" %>
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="tab-pane fade" id="list-mensu" role="tabpanel" aria-labelledby="list-mensu-list">
                    <% SubCategory.all.each do |category| %>
                        <div class="card text-center mb-5">
                            <div class="card-body">
                                <h5 class="card-title"><%= t "our_subscriptions" %> <%= category.duration %> <%= t "month" %></h5>
                                <div class="card-deck">
                                <% category.items.each do |item| %>
                                    <% if item.sub_type.specification == "Monthly" %>
                                        <div class="card">
                                            <%if item.avatar.attached?%>
                                                <%= image_tag item.avatar, alt: 'avatar', class: "card-img-top" %>
                                            <%else%>
                                                <%= image_tag("default.jpg", class:"card-img-top") %>
                                            <%end%>
                                            <div class="card-body">
                                                <h5 class="card-title"><%= item.title %></h5>
                                                <p class="card-text"><%= item.price %> €</p>
                                                <p class="card-text"><%= t "receive" %> <%= item.sub_category.duration %> <%= t "month_in" %> <%= item.sub_type.specification %> <%= t "basket" %> <%= item.size %></p>
                                                <%= link_to t("cta_see_more"), item_path(item) , class:"btn btn-primary stretched-link" %>
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>