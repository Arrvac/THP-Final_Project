<div id="signin-form">
  <div class="container justify-content-center">
    <div class="row text-center">
      <div class="col-md-6 offset-md-3"-->
        <div class="form-signin my-5">
          <h1 class="h3 mb-3 font-weight-normal"><%= t "sign_up_devise" %></h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
                <div class="form-group">
                  <% f.label :email %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                </div>

                <div class="form-group">
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> <%= t "min_chara" %>)</em>
                  <% end %><br />
                  <% f.label :password %>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t("password") %>
                </div>

                <div class="form-group">
                  <% f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("confirm_password") %>
                </div>

                <div class="actions">
                  <%= f.submit t("sing_up"), class: "btn btn-primary btn-block" %>
                </div>
              <% end %>
              <br>
              <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>    
