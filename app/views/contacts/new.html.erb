<div class="container contact-form my-5">
  <%= form_for :contact, url: contacts_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email, required: true %>
    <br>
    <%= f.label :message %>
    <%= f.text_area :message, as: :text %>
    <br>
    <div class="hidden">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, hint: 'laisser ce champ vide' %>
    </div>
    <%= f.submit 'Envoyer Message', class: "button" %>
  <% end %>
</div>

